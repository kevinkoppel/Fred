<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myfirstapp.SignUpActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Fred"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#2461DB"
        android:textSize="60sp"
        app:fontFamily="@font/actor"
        android:background="@color/common_google_signin_btn_text_dark_default">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="304dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="50dp"
            android:paddingRight="15dp">

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:paddingBottom="15dp"
                android:textColorHint="#2461DB" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:hint="salasÃµna"
                android:inputType="textPassword"
                android:paddingBottom="15dp"
                android:textColorHint="#2461DB" />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:background="@drawable/rounded_button_transparent"
                android:text="Logi sisse"
                android:textAllCaps="false"
                android:textColor="#2461DB" />

            <TextView
                android:id="@+id/go_to_signup"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="Ei ole veel kasutaja? Mine registreerima"
                android:textAlignment="center" />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="133dp"
            android:layout_height="71dp"
            android:layout_above="@+id/linearLayout2"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/actor"
            android:gravity="center"
            android:text="Fred"
            android:textColor="#2461DB"
            android:textSize="60sp" />


    </RelativeLayout>


</LinearLayout>